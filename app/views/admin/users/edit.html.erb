<!--管理者：顧客編集画面-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">
      <%= @user.name %>さんの会員詳細
    </h4>
  </div>

  <div class="row form-group">
    <p class="col-sm-2">会員ID</p>
    <div class="col-sm-8"><%= @user.id %></div>
  </div>
  <%= form_with model: @user, url:  admin_user_path(@user) do |f| %>
    <div class="row form-group">
      <%= f.label 'ユーザーネーム', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :name, class: "form-control col-sm-2 mr-5" %>
    </div>
    <div class="row form-group">
      <%= f.label 'メールアドレス', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :email, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <%= f.label '生年月日', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :birthday, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <p class="col-sm-2">会員ステータス</p>
      <%= f.radio_button :is_deleted, false, class: "mb-3" %>
      <%= f.label :is_deleted, '有効', value: false, class: "col-sm-2" %>
      <%= f.radio_button :is_deleted, true, class: "mb-3" %>
      <%= f.label :is_deleted, '退会', value: true, class: "col-sm-2" %>
    </div>
    <p class="col"><%= f.submit '変更を保存', class: "btn btn-success mx-auto d-block" %></p>
    <% end %>
  </div>
</div>