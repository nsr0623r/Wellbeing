<!--管理者：顧客一覧画面-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">会員一覧</h4>
  </div>

  <table class="table w-75 mx-auto">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>生年月日</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to admin_user_path(user.id), class: "text-dark border-bottom border-dark"  do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.birthday %></td>
        <td>
          <% if user.is_deleted == false %>
            <strong class="text-success">有効</strong>
          <% else customer.is_deleted != false %>
            <strong class="text-black-50">退会</strong>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>