<!DOCTYPE html>
<html>
  <head>
    <title>Wellbeing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://kit.fontawesome.com/96018690bc.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Wellbe</span>
          </a>
          <ul class="navbar-nav  ml-auto navbar-expand-lg">
            <% if user_signed_in? %>
              <%= render 'layouts/user_header' %>
            <% else %>
              <li class="nav-item mr-3">
                <%= link_to about_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-link mr-1 mt-1"></i>About
                <% end %>  
              </li>
              <li class="nav-item mr-3">
                <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-in-alt mr-1 mt-1"></i>ログイン
                <% end %>
              </li>
              <li class="nav-item mr-3">
                <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-user-plus mr-1 mt-1"></i>新規登録
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
      <div class="container">
        <%= yield %>
      </div>
    </main>
    
  </body>
</html>
